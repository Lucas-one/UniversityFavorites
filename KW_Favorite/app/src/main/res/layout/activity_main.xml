<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F232F"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_kw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear1"

        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/kw_logo1"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/logo_kw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linear1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sublinear1"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnLibrary"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="도서관" />

            <Button
                android:id="@+id/btnUniversityNotice"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="대학 홈페이지" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:id="@+id/sublinear2"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="날씨" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="학사일정" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="교내 전화번호" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:id="@+id/sublinear3"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="건물 위치" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="취업정보" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="웹메일" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>