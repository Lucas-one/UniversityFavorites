<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F232F"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_kw"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/kw_logo1"

        app:layout_constraintBottom_toTopOf="@+id/linear1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_kw">

        <LinearLayout
            android:id="@+id/sublinear1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLibrary"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="#480000"
                android:text="Library"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnUniversityNotice"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:background="#4B2866"
                android:text="University"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sublinear2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMemo"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:background="#AF7507"
                android:text="Memo"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnCalender"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="3"
                android:background="#DE6216"
                android:text="Calender"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:background="#480000"
                android:text="Call"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sublinear3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCampus"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="3"
                android:background="#4B2866"
                android:text="Campus"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnIPP"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:background="#480000"
                android:text="IPP"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnWebMail"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:background="#DE6216"
                android:text="Web Mail"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>